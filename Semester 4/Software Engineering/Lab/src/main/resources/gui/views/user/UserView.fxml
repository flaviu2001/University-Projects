<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
          prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="128.0" minHeight="0.0" prefHeight="23.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="319.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="354.0" minHeight="10.0" prefHeight="318.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="354.0" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label GridPane.rowIndex="1" text="Welcome" GridPane.columnSpan="2" GridPane.halignment="CENTER"
           GridPane.valignment="CENTER"/>
    <VBox GridPane.rowIndex="2" GridPane.rowSpan="2" GridPane.halignment="CENTER" alignment="TOP_CENTER">
        <Label text="Choose conference"/>
        <ListView fx:id="conferenceListView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0"
                  prefWidth="200.0"/>
    </VBox>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.rowSpan="2" GridPane.halignment="CENTER" alignment="TOP_CENTER">
        <HBox alignment="CENTER">
        <Button fx:id="registerAuthor" mnemonicParsing="false" text="Register as Author" >
            <HBox.margin>
                <Insets>
                    <bottom>20</bottom>
                    <right>40</right>
                </Insets>
            </HBox.margin>
        </Button>
        <Button fx:id="registerAsListener" mnemonicParsing="false" text="Register as Listener" >
            <HBox.margin>
                <Insets>
                    <bottom>20</bottom>
                    <right>40</right>
                </Insets>
            </HBox.margin>
        </Button>
        </HBox>
    </VBox>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="logoutButton" mnemonicParsing="false" text="Logout"
            GridPane.halignment="CENTER"/>
</GridPane>
