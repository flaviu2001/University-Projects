        <RowConstraints maxHeight="153.0" minHeight="10.0" prefHeight="39.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <Label text="Create your account" GridPane.halignment="CENTER" GridPane.columnSpan="2"/>
    <Label text="Email" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
               prefHeight="25.0" prefWidth="200.0" GridPane.halignment="CENTER" GridPane.rowIndex="2"
               GridPane.columnIndex="0"/>

    <Label text="Username" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
               minWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" GridPane.halignment="CENTER"
               GridPane.rowIndex="4" GridPane.columnIndex="0"/>

    <Label text="Password" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label text="Confirm password" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.columnIndex="0"/>

    <PasswordField fx:id="passwordField" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0"
                   GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <PasswordField fx:id="confirmPasswordField" maxWidth="-Infinity" prefWidth="200.0" GridPane.halignment="CENTER"
                   GridPane.rowIndex="8" GridPane.columnIndex="0"/>

    <Button fx:id="createAccountButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="125.0"
            text="Create account" GridPane.halignment="CENTER" GridPane.rowIndex="9" GridPane.columnSpan="2"/>
    <Button fx:id="backToLoginButton" mnemonicParsing="false" text="Back to Login" GridPane.halignment="CENTER"
            GridPane.rowIndex="10" GridPane.columnSpan="2"/>

    <Label text="Full name" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <TextField fx:id="fullNameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
               minWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" GridPane.halignment="CENTER"
               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Affiliation" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <TextField fx:id="affiliationField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
